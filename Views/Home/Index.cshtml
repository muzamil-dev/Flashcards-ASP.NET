@model IEnumerable<FlashcardsApp.Models.Deck>

@{
    ViewData["Title"] = "Your Decks";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Your Decks</h2>
        <a asp-action="Create" class="btn btn-primary">+ New Deck</a>
    </div>

    <div class="row">
        @foreach (var deck in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@deck.Name</h5>
                        <p class="card-text text-muted">
                            @deck.Flashcards?.Count() ?? 0 flashcards
                        </p>

                        <div class="mt-auto">
                            <a asp-controller="Decks" asp-action="Details" asp-route-id="@deck.Id" class="btn btn-sm btn-outline-primary">View</a>
                            <a asp-controller="Study" asp-action="Start" asp-route-deckId="@deck.Id" class="btn btn-sm btn-success">Study</a>
                            <a asp-action="Edit" asp-route-id="@deck.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@deck.Id" class="btn btn-sm btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
