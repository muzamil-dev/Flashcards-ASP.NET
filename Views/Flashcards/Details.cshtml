@model FlashcardsApp.Models.Flashcard

@{
    ViewData["Title"] = "Flashcard Details";
}

<div class="container mt-4">
    <h2>Flashcard Details</h2>

    <p><strong>Question:</strong> @Model.Question</p>
    <p><strong>Answer:</strong> @Model.Answer</p>

    <a asp-action="Index" asp-route-deckId="@Model.DeckId" class="btn btn-secondary">Back</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
</div>
