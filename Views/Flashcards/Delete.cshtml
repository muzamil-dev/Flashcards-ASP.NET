@model FlashcardsApp.Models.Flashcard

@{
    ViewData["Title"] = "Delete Flashcard";
}

<div class="container mt-4">
    <h2>Delete Flashcard</h2>

    <h4>Are you sure you want to delete this?</h4>
    <p><strong>Question:</strong> @Model.Question</p>
    <p><strong>Answer:</strong> @Model.Answer</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="DeckId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-route-deckId="@Model.DeckId" class="btn btn-sm btn-outline-primary">Cancel</a>
    </form>
</div>
