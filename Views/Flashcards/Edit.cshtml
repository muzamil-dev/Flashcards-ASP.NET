@model FlashcardsApp.Models.Flashcard

@{
    ViewData["Title"] = "Edit Flashcard";
}

<div class="container mt-4">
    <h2>Edit Flashcard</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="DeckId" />

        <div class="mb-3">
            <label asp-for="Question" class="form-label"></label>
            <input asp-for="Question" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Answer" class="form-label"></label>
            <input asp-for="Answer" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" asp-route-deckId="@Model.DeckId" class="btn btn-secondary">Cancel</a>
    </form>
</div>
