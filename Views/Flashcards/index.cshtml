@model FlashcardsApp.Models.Deck

@{
    ViewData["Title"] = "Flashcards in " + Model.Name;
}

<div class="container mt-4">
    <h2>@Model.Name - Flashcards</h2>
    <a asp-action="Create" asp-route-deckId="@Model.Id" class="btn btn-primary mb-3">+ Add Flashcard</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Question</th>
                <th>Answer</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var card in Model.Flashcards)
            {
                <tr>
                    <td>@card.Question</td>
                    <td>@card.Answer</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@card.Id" class="btn btn-sm btn-outline-primary">View</a>
                        <a asp-action="Edit" asp-route-id="@card.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@card.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Decks" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">‚Üê Back to Deck</a>
</div>
